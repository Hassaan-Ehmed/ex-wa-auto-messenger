{
    "manifest_version": 3,
    "name": "WhatsApp Auto Messenger",
    "version": "1.0",
    "description": "Send WhatsApp messages automatically",
    "permissions": ["scripting", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.jpg"
      }
    },
    "content_scripts": [{
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }]
  }
  